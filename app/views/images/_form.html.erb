    <%= f.label :picture %>
    <%= f.input :picture, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.input :user_id, input_html: { class: 'form-control' } %>
  </div>

  <div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
